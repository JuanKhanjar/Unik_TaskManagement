<!--Table-->
<div class="container"  >
<div class="col-12">
    <h2 class="p-2 bg-primary text-white fw-40 rounded-2">Kunder List OverView</h2>
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <!-- <th scope="col">Descriptions</th> -->
                <th scope="col">Full Name</th>
                <!-- <th scope="col">End Dto.</th> -->
                <!-- <th scope="col">Assign To</th> -->
                <th scope="col">Email</th>
                <th scope="col">Tlf.</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kunder in Model.kunder)
            {
                <tr>
                    <td>@kunder.KundeId</td>
                    <!-- <td>Prapare some pc in kontor</td> -->
                    <td>@kunder.FullName</td>
                    <!-- <td>15-nov-2022</td> -->
                    <!-- <td>Juan Khanjer</td> -->
                    <td>
                        <span class="badge rounded-pill bg-secondary">@kunder.Email</span>
                    </td>
                    <td><span class="badge bg-success">+45 </span>@kunder.Phone</td>
                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#exampleModal@(kunder.KundeId)">
                            View
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
</div>
<!--Table-->
<!-- Modal -->
@foreach (var item in Model.kunder)
{
    <div class="modal fade" id="exampleModal@(item.KundeId)" tabindex="-1" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header card-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                        Task
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h2 class="mb-2">Progress:</h2>
                                <div class="progress mb-2">
                                    <div class="progress-bar" role="progressbar" aria-label="Example with label" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                                </div>
                            </div>

                        </div>
                        <div class="row ">
                            <div class="col-md-12 p-2">
                                <h2>Assign To: <span class="badge bg-secondary d-flex m-2">@item.FullName</span></h2>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 ">
                                <h2>Description</h2>
                                <p>
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatum at molestias error expedita. Consequatur ad unde ut,
                                    eum reiciendis perspiciatis harum praesentium adipisci recusandae a eos exercitationem doloribus magni blanditiis!
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary">
                        Save changes
                    </button>
                </div>
            </div>
        </div>
    </div>
}

